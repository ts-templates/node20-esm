{
  "name": "@ts-templates/node20-esm",
  "version": "0.1.0",
  "description": "Template for TypeScript project using Node.js v20 (ESM)",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "start": "tsx src/main.ts",
    "test": "glob -c 'node --test --import tsx/esm' 'src/**/*.test.ts'"
  },
  "engines": {
    "node": "20.19.6"
  },
  "devDependencies": {
    "@tsconfig/node20": "20.1.8",
    "@tsconfig/strictest": "2.0.8",
    "@types/node": "20.19.26",
    "glob": "12.0.0",
    "rimraf": "6.1.2",
    "tsx": "4.21.0",
    "typescript": "5.9.3"
  },
  "license": "MIT"
}
